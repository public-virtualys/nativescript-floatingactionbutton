<Page 
    xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" 
    xmlns:FAB="nativescript-floatingactionbutton">
    <Page.actionBar>
        <ActionBar title="Native FAB" backgroundColor="#3F51B5" color="#fff" />
    </Page.actionBar>
    <grid-layout height="100%" width="100%" id="userList" rows="*">
        <FAB:fab id="fabButtonTopLeft" row="0" icon="res://ic_add_white" tap="animate" rippleColor="#ffffff" class="fab-button top-left" hideOnSwipeOfView="userList" swipeAnimation="slideUp" size="auto" />
        <!-- slideDown, slideUp, slideRight, slideLeft, scale -->
        <FAB:fab id="fabButtonTopCenter" row="0" icon="res://icon" tap="fabTap" rippleColor="#ffffff" class="fab-button top-center" hideOnSwipeOfView="userList" swipeAnimation="slideRight" size="normal" />
        <FAB:fab id="fabButtonTopRight" row="0" icon="res://icon" tap="fabTap" rippleColor="#ffffff" class="fab-button top-right" hideOnSwipeOfView="userList" swipeAnimation="slideRight" size="mini" />
        <!-- slideDown, slideUp, slideRight, slideLeft, scale -->
        <FAB:fab id="fabButtonBottomLeft" row="0" icon="res://ic_add_white" tap="fabTap" rippleColor="#ffffff" class="bottom-left fab-button" hideOnSwipeOfView="userList" swipeAnimation="slideLeft" />
        <!-- slideDown, slideUp, slideRight, slideLeft, scale -->
        <FAB:fab id="fabButtonBottomRight" row="0" icon="res://nstudio" tap="fabTap" rippleColor="#ffffff" class="fab-button bottom-right" hideOnSwipeOfView="userList" swipeAnimation="slideDown" />
        <!-- slideDown, slideUp, slideRight, slideLeft, scale -->
        <FAB:fab id="fabButtonCenter" row="0" icon="res://icon" tap="fabTap" rippleColor="#ffffff" class="fab-button center fab-custom" hideOnSwipeOfView="userList" swipeAnimation="scale" size="custom" />
        <!-- slideDown, slideUp, slideRight, slideLeft, scale -->
    </grid-layout>
</Page>